<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GearHead - Payments</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Antic+Didone&family=Rajdhani:wght@300;400&family=Sarpanch&family=Urbanist:ital,wght@1,100&display=swap" rel="stylesheet">
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap" rel="stylesheet">

        <!-- <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet"> -->
        <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

        <link rel="stylesheet" href="/css/normalize.css">
        <link rel="stylesheet" href="/css/homepageStyle.css">
        <link rel="stylesheet" href="/css/dashboardStyle.css">
    </head>    
    <body>
        <nav>
            <a href="/dashboard" id="homeLink"><section id="titleContainer">
                <img src="/images/gearHead01.jpeg" id="dashboardLogo" alt="dashboard logo image">
           </section></a>
           <section id="navDashContainer">
                <ul id="mainDash">
                    <li><a href="/dashboard" title="Dashboard"><i class="icon-dashboard"></i></a></li>
                    <li><a href="/dashboard/pointofsale" title="Point of Sale"><i class="icon-money"></i></a></li>
                    <li><a href="/dashboard/jobs" title="Jobs & Appointments"><i class="icon-tasks"></i></a></li>
                    <li><a href="/dashboard/myshop" title="My Shop"><i class="icon-building"></i></a></li>
                    <li><a href="/dashboard/customers" title="Customers"><i class="icon-group"></i></a></li>
                    <li><a href="/dashboard/reports" title="Reports"><i class="icon-bar-chart"></i></a></li>
                    <li><a href="/dashboard/appsettings" title="Settings"><i class="icon-cogs"></i></a></li>
                </ul>
            
                <section id="buttonContainer">
                    <a href="/account" id="accountLink" class="navButton">Account</a>
                    <a href="/login" id="signout" class="navButton">Sign Out</a>
                </section>
            </section>
        </nav>
        <section class="pageTitleContainer">
            <h1>Payment Center</h1>
        </section>
        <section id="dashSquares">
            <section id="enterPaymentData" class="dashSquare">
                <h2 class="dashTitle">Enter Payment Information</h2>
                <form id="ccInfo">
                    <label for="cardHolderName">FULL NAME ON CARD: </label>
                    <input type="text" id="cardHolderName" name="cardname">
                    <label for="cardNumber">CARD NUMBER: </label>
                    <input type="number" id="cardNumber" name="cardnumber">
                    <label for="cardExpiration">EXPIRATION: </label>
                    <input type="number" id="cardExpirationMonth" class="expDate" placeholder="Month"> 
                    <input type="number" id="cardExpirationYear" class="expDate" placeholder="Year">
                    <label for="cardVerification">CVV: </label>
                    <input type="number" id="cardVerification" placeholder="Security Code">
                    <button type="submit" id="cardPaymentSubmit">Proceed</button>
                    <!-- <button id="paypalRedirect">Pay with PayPal</button> -->
                </form> 
            </section>
            <section id="activeJobs-payments" class="dashSquare">
                <h2 class="dashTitle">Invoice from Active Jobs</h2>
                <ul class="dashDataContainer">
                    <!-- display the jobs already within database -->
                    <% for(var u = 0; u < jobCollectionArray.length; u++) {%>
                        <li><a href="/job?_id=<%= jobCollectionArray[u]._id %>">
                            <div id="jobCustomerInfo">
                                <h4><%= jobCollectionArray[u].name %></h4>
                                <span><%= jobCollectionArray[u].job_description.toUpperCase() %></span>
                                <h5><%= jobCollectionArray[u].year + ' ' + jobCollectionArray[u].make.toUpperCase() + ' ' + jobCollectionArray[u].model %></h5>
                            </div>
                            <div class="jobStat">
                                <label for="jobstatus">Priority:</label>
                                <span><%= jobCollectionArray[u].priority %></span>
                                <div class="statusContainer">
                                    <h4>Completed Status</h4>
                                    <span><%= jobCollectionArray[u].status %>%</span>
                                </div>
                            </div>
                            <a href="/invoice?<%= jobCollectionArray[u]._id %>" class="dashButton" id="invoiceButton">Invoice</a>
                        </a></li>
                        
                    <% } %>
                </ul>
            </section>
            <section id="searchCustomer-payments" class="dashSquare">
                <h2 class="dashTitle">Search Customers</h2>
                <form id="searchCustomerForm" action="/searchcustomer" method="POST">
                    <input id="customerName" type="text" name="customerName" placeholder="Customer Name">
                    <button type="submit" name="submitJob">Search</button>
                </form>
                <ul id="searchResults" class="dashDataContainer">
                    <!-- display the jobs already within database -->
                    
                </ul>
            </section>
            <section id="quoteAppointments" class="dashSquare">
                <h2 class="dashTitle">Quote from Appointment Requests</h2>
                <ul class="dashDataContainer">
                    <li>
                        <a href="#">
                            <div id="appointmentDataContainer">
                                <h4>Kenny Ortigas</h4>
                                <h5>2018 Subaru BRZ</h5>
                                <span>Needs Horsepower</span>
                            </div>
                        </a>
                        <a href="#message" class="dashButton" id="messageButton">Message</a>
                        <a href="#quote" class="dashButton" id="quoteButton">Quote</a>
                    </li>
                </ul>
            </section>
            <section id="paymentData" class="dashSquare">
                <h2 class="dashTitle">Payment Data</h2>
                
            </section>

            <!-- <section id="completedJobs" class="dashSquare">
                <h2 class="dashTitle">Recently Completed Jobs</h2>
                <ul class="dashDataContainer">
                    <li><a href="#">
                        <div>
                            <h4>Jessica DingDong</h4>
                            <h5>2008 Ford Escape</h5>
                            <span>New Side Mirror</span>
                        </div>
                    </a></li>
                </ul>
            </section> -->
        </section>
 

        <footer>
            <ul>
                <li><a href="/company">Company</a></li>
                <li><a href="#">Help</a></li>
                <li><a href="#">Resources</a></li>
            </ul>
            <section id="socials">
                <ul>
                    <li>Instagram</li>
                    <li>Twitter</li>
                    <li>FaceBook</li>
                </ul>
            </section>
        </footer>
        <script src='/js/dashboardScripts.js'></script>
    </body>
</html>