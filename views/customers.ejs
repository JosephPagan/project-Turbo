<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GearHead - Customers</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Antic+Didone&family=Rajdhani:wght@300;400&family=Sarpanch&family=Urbanist:ital,wght@1,100&display=swap" rel="stylesheet">
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap" rel="stylesheet">

        <!-- <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet"> -->
        <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

        <link rel="stylesheet" href="css/normalize.css">
        <link rel="stylesheet" href="css/homepageStyle.css">
        <link rel="stylesheet" href="css/dashboardStyle.css">
    </head>    
    <body>
        <a href="/dashboard" id="homeLink"><section id="titleContainer">
            <img src="gearHead01.jpeg" id="dashboardLogo" alt="dashboard logo image">
       </section></a>
        <nav>
                <ul id="mainDash">
                    <li><a href="/dashboard" title="Dashboard"><i class="icon-dashboard"></i></a></li>
                    <li><a href="/pointofsale" title="Point of Sale"><i class="icon-money"></i></a></li>
                    <li><a href="/jobs" title="Jobs & Appointments"><i class="icon-tasks"></i></a></li>
                    <li><a href="/myshop" title="My Shop"><i class="icon-building"></i></a></li>
                    <li><a href="/customers" title="Customers"><i class="icon-group"></i></a></li>
                    <li><a href="/reports" title="Reports"><i class="icon-bar-chart"></i></a></li>
                    <li><a href="/appsettings" title="Settings"><i class="icon-cogs"></i></a></li>
                </ul>
            
            <section id="buttonContainer">
                <a href="/account" id="accountLink" class="navButton">Account</a>
                <a href="/login" id="signout" class="navButton">Sign Out</a>
            </section>
        </nav>
        <section class="pageTitleContainer">
            <h1>Customer Center</h1>
        </section>
        <section id="dashSquares">
            <section id="recentCustomers" class="dashSquare">
                <h2 class="dashTitle">Recent Customers</h2>
                <ul class="dashDataContainer">
                    <!-- display the jobs already within database -->
                    <% for(var u = 0; u < customerDataArray.length; u++) {%>
                        <li><a href="/customer?_id=<%= customerDataArray[u]._id %>">
                            <div>
                                <h3>Customer ID: <%= customerDataArray[u]._id %></h3>
                                <h4><%= customerDataArray[u].customer %></h4>
                                <h5><%= customerDataArray[u].cars.year + ' ' + customerDataArray[u].cars.make.toUpperCase() + ' ' + customerDataArray[u].cars.model %></h5>
                            </div>
                        </a></li>
                    <% } %>
                </ul>
            </section>
            <section id="searchCustomer" class="dashSquare">
                <h2 class="dashTitle">Search Customers</h2>
                <form id="searchCustomerForm" action="/searchcustomer" method="POST">
                    <input id="customerName" type="text" name="customerName" placeholder="Customer Name">
                    <button type="submit" name="submitJob">Search</button>
                </form>
                <ul id="searchResults" class="dashDataContainer">
                    <!-- display the jobs already within database -->
                    <% for(var u = 0; u < customerDataArray.length; u++) {%>
                        <li><a href="#">
                            <div>
                                <h3>Customer ID: <%= customerDataArray[u]._id %></h3>
                                <h4><%= customerDataArray[u].customer %></h4>
                                <h5><%= customerDataArray[u].cars.year + ' ' + customerDataArray[u].cars.make.toUpperCase() + ' ' + customerDataArray[u].cars.model %></h5>
                            </div>
                        </a></li>
                    <% } %>
                </ul>
                <section>
                    <h2 id="formStatus"></h2>
                </section>
            </section>
            <section id="activeCustomers" class="dashSquare">
                <h2 class="dashTitle">Active Customers</h2>
                <ul class="dashDataContainer">
                    <!-- display the jobs already within database -->
                </ul>
            </section>

        </section>
 

        <footer>
            <ul>
                <li><a href="/company">Company</a></li>
                <li><a href="#">Help</a></li>
                <li><a href="#">Resources</a></li>
            </ul>
            <section id="socials">
                <ul>
                    <li>Instagram</li>
                    <li>Twitter</li>
                    <li>FaceBook</li>
                </ul>
            </section>
        </footer>
        <script src='/js/dashboardScripts.js'></script>
    </body>
</html>