<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GearHead - My Shop</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Antic+Didone&family=Rajdhani:wght@300;400&family=Sarpanch&family=Urbanist:ital,wght@1,100&display=swap" rel="stylesheet">
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap" rel="stylesheet">

        <!-- <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet"> -->
        <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

        <link rel="stylesheet" href="normalize.css">
        <link rel="stylesheet" href="homepageStyle.css">
        <link rel="stylesheet" href="dashboardStyle.css">
    </head>    
    <body>
        <a href="/dashboard" id="homeLink"><section id="titleContainer">
            <img src="gearHead01.jpeg" id="dashboardLogo" alt="dashboard logo image">
       </section></a>
        <nav>
                <ul id="mainDash">
                    <li><a href="/dashboard" title="Dashboard"><i class="icon-dashboard"></i></a></li>
                    <li><a href="/pointofsale" title="Point of Sale"><i class="icon-money"></i></a></li>
                    <li><a href="/jobs" title="Jobs & Appointments"><i class="icon-tasks"></i></a></li>
                    <li><a href="/myshop" title="My Shop"><i class="icon-building"></i></a></li>
                    <li><a href="/customers" title="Customers"><i class="icon-group"></i></a></li>
                    <li><a href="/reports" title="Reports"><i class="icon-bar-chart"></i></a></li>
                    <li><a href="/appsettings" title="Settings"><i class="icon-cogs"></i></a></li>
                </ul>
            
            <section id="buttonContainer">
                <a href="/account" id="accountLink" class="navButton">Account</a>
                <a href="/login" id="signout" class="navButton">Sign Out</a>
            </section>
        </nav>
        <section class="pageTitleContainer">
            <h1>My Shop</h1>
        </section>
        <section id="dashSquares">
            <section id="recentCustomers" class="dashSquare">
                <h2 class="dashTitle">Employees</h2>
                <ul class="dashDataContainer">
                    <!-- display the jobs already within database -->
                    <% for(var u = 0; u < employeeDataArray.length; u++) {%>
                        <li><a href="#">
                            <div>
                                <h3><%= employeeDataArray[u].name %></h3>
                                <h4><%= employeeDataArray[u].email %></h4>
                                <h5><%= employeeDataArray[u].phone %></h5>
                            </div>
                            <div>
                                <h5><%= employeeDataArray[u].position.toUpperCase() + ' - ' + employeeDataArray[u].employee_type.toUpperCase() %></h5>
                                <h5>Active Jobs: </h5>
                                <h5>Jobs Completed: </h5>
                            </div>
                        </a></li>
                    <% } %>

                </ul>
            </section>
            <section id="addEmployee" class="dashSquare">
                <h2 class="dashTitle">Add Employee</h2>
                <form id="addEmployeeForm" action="/addemployee" method="POST">
                    <input id="employeeName" type="text" name="employeeName" placeholder="Name">
                    <input id="employeeEmail" type="email" name="employeeEmail" placeholder="Email">
                    <input id="employeePhone" type="tel" name="employeePhone" placeholder="Phone Number">
                    <select id="employeePosition" name="employeeposition">
                        <option value="tech">Technician</option>
                        <option value="lead-tech">Lead Technician</option>
                        <option value="manager">Manager</option>
                    </select>
                    <section id="employeeRadioContainer">
                        <label for="fullTime">Full-Time</label>
                        <input id="fullTime" type="radio" name="employeeType" value="full-time" class="employeeRadios" form="addEmployeeForm">
                        <label for="partTime">Part-Time</label>
                        <input id="partTime" type="radio" name="employeeType" value="part-time" class="employeeRadios" form="addEmployeeForm">
                    </section>
                    <button type="submit" name="submitEmployee" id="addEmployeeButton">Add</button>
                </form>
                <section>
                    <h2 id="formStatus"></h2>
                </section>
            </section>
            <section id="shopDetails" class="dashSquare">
                <h2 class="dashTitle">Shop Details</h2>
                <section id="shopDetailsContainer">
                    <h3 id="shopName">Shop Name</h3>
                    <h4 id="shopAddress">Shop Address</h4>
                    <h4 id="shopEmail">ShopEmail.com</h4>
                    <h4 id="shopPhone">Shop Phone Number</h4>
                </section>

                <a href="/addshop" id="addShopButton" class="dashButton">Add/Change Shop</a>
            </section>
            <section id="shopPerformance" class="dashSquare">
                <h2 class="dashTitle">Shop Performance</h2>
                <ul class="dashDataContainer">
                    <!-- display the jobs already within database -->
                </ul>
            </section>
            <section id="employeePerformance" class="dashSquare">
                <h2 class="dashTitle">Employee Performance</h2>
                <ul class="dashDataContainer">
                    <!-- display the jobs already within database -->
                </ul>
            </section>
        </section>
        <footer>
            <ul>
                <li><a href="/company">Company</a></li>
                <li><a href="#">Help</a></li>
                <li><a href="#">Resources</a></li>
            </ul>
            <section id="socials">
                <ul>
                    <li>Instagram</li>
                    <li>Twitter</li>
                    <li>FaceBook</li>
                </ul>
            </section>
        </footer>
        <script src='/dashboardScripts.js'></script>
    </body>
</html>